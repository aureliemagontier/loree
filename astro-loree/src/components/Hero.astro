---
import { Image } from 'astro:assets';
import aurelie from '../assets/aurelie.jpg';
---
<section id="accueil" class="hero">
    <div class="hero-background">
        <Image src={aurelie} alt="Aurélie Magontier" class="hero-image" />
        <div class="hero-overlay"></div>
    </div>
    <div class="magazine-cover">
        <div class="hero-content">
            <div class="magazine-badge">ÉDITION 2026</div>
            <h1 class="hero-title">L'ORÉE</h1>
            <div class="title-decoration"></div>
            <p class="hero-subtitle">Créons ensemble ce qui vous ressemble</p>
            <p class="hero-description">  Identité de marque • Création graphique • Création de site web • 
                <br>
              Stratégie de communication • Community Management  </p>
            <button class="cta-button" style="background-color: #F5EBC8; color: #2c3e50; border: none; padding: 16px 40px; border-radius: 50px; font-size: 1rem; font-weight: 700; cursor: pointer; text-transform: uppercase; letter-spacing: 1.5px; box-shadow: 0 4px 15px rgba(245, 235, 200, 0.4); margin-top: 20px; transition: all 0.3s ease;">Découvrir Plus</button>
        </div>
        <div class="magazine-text-overlay" style="display: none;">
            <div class="text-box left">
                <h3>AURÉLIE MAGONTIER</h3>
                <p>Fondatrice</p>
            </div>
            <div class="text-box right">
                <p>Stratégie Communication</p>
                <p>Création Web</p>
                <p>Community Management</p>
                <p>Identité Visuelle</p>
            </div>
        </div>
    </div>
</section>
